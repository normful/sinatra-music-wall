<div class="container">
  <div class="page-header">
    <h1>Post a new song</h1>
  </div>
  <form method="POST" class="form-horizontal" action="/songs/new">
    <div class="form-group">
      <label class="control-label col-sm-4" for="title">Song Title</label>
      <div class="col-sm-8">
        <input type="text" class="form-input-text" id="title" name="title" value="<%= @song.title %>">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-4" for="url">Song URL (optional)</label>
      <div class="col-sm-8">
        <input type="text" class="form-input-text" id="url" name="url" value="<%= @song.url %>">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-8">
        <button type="submit" class="btn btn-primary">Post song</button>
      </div>
    </div>
  </form>
  <% if @song.errors.any? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <strong>Error!</strong>
      <ul>
        <% @song.errors.full_messages.each do |song| %>
          <li><%= song %></li>
          <% end %>
      </ul>
    </div>
  <% end %>
</div>
