<div class="container">
  <form method="POST" class="form-signin" role="form" action="/signup">
    <h2 class="form-signin-heading">Sign up for an account</h2>
    <input type="email" class="form-control" id="email" name="email" placeholder="Email address" value="<%= @user.email %>" maxlength=100 required autofocus>
    <input type="password" class="form-control" id="password" name="password" placeholder="Password" value="<%= @user.password %>" maxlength=50 required>
    <button type="submit" class="btn btn-lg btn-success btn-block">Sign up</button>
  </form>
  <% if @user.errors.any? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <strong>Error!</strong>
      <ul>
        <% @user.errors.full_messages.each do |error_message| %>
          <li><%= error_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
