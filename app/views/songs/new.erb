<% if @song.errors.any? %>
<div>
  <strong>There following errors were detected with your song format. Please fix them and try again:</strong>
  <ul>
    <% @song.errors.full_messages.each do |song| %>
      <li><%= song %></li>
      <% end %>
  </ul>
</div>
<% end %>
<div class="container">
    <form method="POST" class="form-horizontal" action="/songs">
      <h1>Post a new song</h1>
        <div class="form-group">
            <label class="control-label col-xs-2" for="title">Title</label>
            <div class="col-xs-5">
              <input type="text" id="title" name="title" value="<%= @song.title %>">
            </div>
          </div>
        <div class="form-group">
            <label class="control-label col-xs-2" for="url">URL (optional)</label>
            <div class="col-xs-5">
              <input type="text" id="url" name="url" value="<%= @song.url %>">
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-offset-2 col-xs-2">
                <button type="submit" class="btn btn-primary">Post</button>
            </div>
        </div>
    </form>
</div>
