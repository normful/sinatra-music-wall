<div class="container">
  <div class="page-header">
    <h1>Songs</h1>
  </div>
  <% @songs.each do |song| %>
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3>
          <a href="/songs/<%= song.id %>"><%= song.title %></a>
        </h3>
        <a href="<%= song.url %>"><%= song.url %></a>
      </div>
      <div class="panel-body">
        <h4>
          <%= Upvote.where({ song_id: song.id }).size %> upvotes
        </h4>
      </div>
      <div class="panel-footer">
        Posted by <%= User.find(song.user_id).email %> at <%= song.created_at %>
      </div>
    </div>
  <% end %>
  <button class="btn btn-success" onclick="location.href='/songs/new'">
      Post a new song
  </button>
</div>
