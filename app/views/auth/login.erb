<div class="container">
  <form method="POST" class="form-signin" role="form" action="/login">
    <h2 class="form-signin-heading">Please log in</h2>
    <input type="email" class="form-control" id="email" name="email" placeholder="Email address" maxlength=100 required autofocus>
    <input type="password" class="form-control" id="password" name="password" placeholder="Password" maxlength=50 required>
    <button type="submit" class="btn btn-lg btn-success btn-block">Login</button>
  </form>
  <% if @user.nil? %>
    <div class="col-sm-6 col-sm-offset-3">
      <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <strong>
          Invalid email or password. Please try again.
          <a href="/signup">Sign up</a> for a new account if you don't already have one.
        </strong>
      </div>
    </div>
  <% end %>
</div>
