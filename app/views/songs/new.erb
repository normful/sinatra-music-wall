<% if @song.errors.any? %>
<div>
  <strong>There following errors were detected with your song format. Please fix them and try again:</strong>
  <ul>
    <% @song.errors.full_messages.each do |song| %>
      <li><%= song %></li>
      <% end %>
  </ul>
</div>
<% end %>
<form method="post" action="/songs">
  <div>
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= @song.title %>">
  </div>
  <div>
    <label for="url">URL (optional):</label>
    <input type="text" id="url" name="url" value="<%= @song.url %>">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>
